<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/publicaciones_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="214dp" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tituloPublicacion"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="141dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="25dp"
                android:layout_toEndOf="@+id/fotoPublicacion"
                android:lines="2"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visitasPublicacion"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tituloPublicacion"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="25dp" />

            <TextView
                android:id="@+id/textoVisitasPublicaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tituloPublicacion"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="13dp"
                android:layout_toStartOf="@+id/visitasPublicacion"
                android:text="@string/stringVisitas"
                tools:text="@string/stringVisitas" />

            <ImageView
                android:id="@+id/fotoPublicacion"
                android:layout_width="216dp"
                android:layout_height="123dp"
                app:srcCompat="@drawable/casa" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>