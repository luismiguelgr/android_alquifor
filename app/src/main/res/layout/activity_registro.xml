<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="404dp"
        android:layout_height="570dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="1dp">

        <EditText
            android:id="@+id/textoUsuarioRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/textoPasswordRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"/>

        <EditText
            android:id="@+id/textoEmailRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>

        <EditText
            android:id="@+id/textoNombreRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"/>

        <EditText
            android:id="@+id/textoPrimerApellidoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Primer apellido"/>

        <EditText
            android:id="@+id/textoSegundoApellidoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Segundo apellido"/>

        <EditText
            android:id="@+id/fechaNacimientoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fecha nacimiento"
            android:inputType="date" />

        <EditText
            android:id="@+id/textoDireccionRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección"/>

        <EditText
            android:id="@+id/textoCiudadRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ciudad"/>

        <EditText
            android:id="@+id/textoProvinciaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provincia" />

        <EditText
            android:id="@+id/codigoPostalRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Código postal"
            android:inputType="number" />

        <EditText
            android:id="@+id/telefonoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Teléfono"
            android:inputType="phone" />
    </LinearLayout>

    <Button
        android:id="@+id/crearUsuarioRegistro"
        android:layout_width="214dp"
        android:layout_height="52dp"
        android:text="@string/crearUsuarioRegistro"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>