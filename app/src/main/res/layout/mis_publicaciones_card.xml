<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/mis_publicaciones_card"
        android:layout_width="381dp"
        android:layout_height="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/usuarioComentario"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/fotoPublicacion"
                android:lines="2"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fechaComentario"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usuarioComentario"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="119dp" />

            <TextView
                android:id="@+id/textoComentarioCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usuarioComentario"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="24dp"
                android:layout_toStartOf="@+id/fechaComentario"
                android:text="@string/stringVisitas"
                tools:text="@string/stringVisitas" />

            <ImageView
                android:id="@+id/fotoPublicacion"
                android:layout_width="119dp"
                android:layout_height="115dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="22dp"
                app:srcCompat="@drawable/foto_publicacion_1" />

            <ImageButton
                android:id="@+id/botonEliminarMiPublicacion"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_below="@+id/usuarioComentario"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="147dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/fotoPublicacion"
                android:background="@null"
                app:srcCompat="@android:drawable/ic_delete" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>